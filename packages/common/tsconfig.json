{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "ES2020",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
}
